<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sea Bid - Tienda</title>
    <link rel="stylesheet" href="./product.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Jura:wght@700&display=swap">
</head>
<body>
    <!-- Contenedor Principal -->
    <div class="examples-product-page">
        <!-- Barra de Navegaci√≥n -->
        <%- include('partials/header') %>

        <!-- Contenido de la Tienda -->
        <div class="shop-container" style="justify-content: center;">
            <!-- Secci√≥n de Productos -->
            <div class="main-content">
                <div class="search-bar">
                    <input type="text" placeholder="Search">
                    <button>üîç</button>
                </div>
                <div class="filter-buttons">
                    <button class="filter-btn">‚úî New</button>
                    <button class="filter-btn">Price ascending</button>
                    <button class="filter-btn">Price descending</button>
                    <button class="filter-btn">Rating</button>
                </div>
                <div class="product-grid">
                    <!-- Tarjetas de Productos -->
                    <% products.forEach(product => { %>
                    <div class="product-card">
                        <a href="/products/<%= product.ProductID %>"><img src="/uploads/<%= product.Imagen %>" alt="<%= product.TipoDePescado %>"></a>
                        <h3><%= product.TipoDePescado %></h3>
                        <p>Price: $<%= product.Precio %></p>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <script src="script.js"></script> 
</body>
</html>
